<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <section class="page-title card">
        <div class="row">
          <div class="col-xs-12">
            <h1><%= yield(:title) %></h1>
          </div>
        </div>
      </section>
      <% unless current_page?(root_path) %>
          <% flash.each do |message_type, message| %>
              <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
      <% end %>
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </div>
</div>