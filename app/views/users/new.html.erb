<% provide(:title, 'Cadastrar') %>
<% provide(:button_text, 'Criar ') %>

<section class="card main-content">
  <div class="row">
    <div class="hidden-xs hidden-sm col-md-5 bg-form-signup">
    </div>
    <div class="col-md-7">
      <%= form_for(@user) do |f| %>
          <%= render 'shared/error_messages' %>

          <div class="form-group">
            <%= f.label :name, 'Nome Completo' %>
            <div class="form-fields "><i class="fa fa-user"></i>
              <div class="row">
                <div class="col-xs-12 col-md-12">
                  <%= f.text_field :name, class: 'form-field' %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, 'Email' %>
            <div class="form-fields "><i class="fa fa-user"></i>
              <div class="row">
                <div class="col-xs-12 col-md-12">
                  <%= f.text_field :email, class: 'form-field' %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, 'Senha' %>
            <div class="form-fields multiple">
              <i class="fa fa-lock"></i>
              <div class="row">
                <div class="col-xs-12 col-md-6">
                  <%= f.password_field :password, class: 'form-field', placeholder: 'Digite sua senha...' %>
                </div>
                <div class="col-xs-12 col-md-6">
                  <%= f.password_field :password_confirmation, class: 'form-field', placeholder: 'Digite sua senha novamente...' %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :cep, 'Endereço' %>
            <div class="form-fields multiple"><i class="fa fa-map-marker"></i>
              <div class="row">
                <div class="col-xs-12 col-md-4">
                  <%= f.text_field :cep, class: 'form-field', placeholder: 'CEP'%>
                </div>
                <div class="col-xs-12 col-md-8">
                  <%= f.text_field :address, class: 'form-field', placeholder: 'Logradouro' %>
                </div>
                <div class="col-xs-12 col-md-4">
                  <%= f.text_field :number, class: 'form-field', placeholder: 'Número' %>
                </div>
                <div class="col-xs-12 col-md-4">
                  <%= f.text_field :complement, class: 'form-field', placeholder: 'Complemento' %>
                </div>
                <div class="col-xs-12 col-md-4">
                  <%= f.text_field :neighborhood, class: 'form-field', placeholder: 'Bairro' %>
                </div>
                <div class="col-xs-12 col-md-4">
                  <%= f.text_field :city, class: 'form-field', placeholder: 'Cidade' %>
                </div>
                <div class="col-xs-12 col-md-4">
                  <%= f.text_field :state, class: 'form-field', placeholder: 'Estado' %>
                </div>
                <div class="col-xs-12 col-md-4">
                  <%= f.text_field :country, class: 'form-field', placeholder: 'País' %>
                </div>
              </div>
            </div>
          </div>

          <div class="text-right">
            <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
          </div>
      <% end %>
    </div>
  </div>
</section>
