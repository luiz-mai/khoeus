<% provide(:title, 'Reset Password') %>

<section class="card content">
  <div class="row">
    <div class="col-xs-6 col-md-offset-3">
      <p class="text-center">Insira o e-mail que você usou no seu cadastro. Nós mandaremos um link para sua caixa de entrada para que você possa redefinir sua senha.</p>
      <%= form_for(:user, url: password_reset_path) do |f| %>
          <div class="form-group">
            <%= f.label :email, 'Email' %>
            <div class="form-fields "><i class="fa fa-at"></i>
              <div class="row">
                <div class="col-xs-12">
                  <%= f.text_field :email, class: 'form-field' %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-xs-12">
                <div class="text-right">
                  <%= f.submit 'Enviar', class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
          </div>

      <% end %>

    </div>
  </div>
</section>