<% provide(:title, 'Log in') %>

<section class="card content">
  <div class="row table-row">
    <div class="hidden-xs hidden-sm col-md-6 table-cell middle">
      <%= image_tag 'img_form-login.png', :class => 'form-image' %>
    </div>
    <div class="col-xs-12 col-md-6 table-cell">
      <%= form_for(:login, url: login_path) do |f| %>

          <div class="form-group">
            <%= f.label :email, 'Email' %>
            <div class="form-fields "><i class="fa fa-at"></i>
              <div class="row">
                <div class="col-xs-12 col-md-12">
                  <%= f.text_field :email, class: 'form-field' %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password, 'Senha' %>
            <div class="form-fields "><i class="fa fa-lock"></i>
              <div class="row">
                <div class="col-xs-12 col-md-12">
                  <%= f.password_field :password, class: 'form-field' %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="row">
              <div class="col-xs-12 col-md-6">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, 'Lembrar de mim', class: 'checkbox inline' %>
              </div>
              <div class="col-xs-12 col-md-6">
                <div class="text-right">
                  <%= f.submit 'Entrar', class: 'btn btn-primary' %>
                </div>
              </div>
            </div>
          </div>

          <div class="form-footer text-center">
            <p><%= link_to 'Esqueceu sua senha?', password_reset_path %></p>
            <p>NÃ£o tem uma conta? <%= link_to 'Cadastre-se agora!', signup_path %></p>
          </div>
      <% end %>

    </div>
  </div>
</section>